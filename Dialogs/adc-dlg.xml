<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
	<name>airdata-reference</name>
    <layout>vbox</layout>
	<pref-width>180</pref-width>
	<color>
		<red>0.3</red>
		<green>0.3</green>
		<blue>0.3</blue>
		<alpha>0.6</alpha>
	</color>	
    <group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>Airdata reference</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<color>
				<red>0.5</red>
				<green>0.5</green>
				<blue>0.5</blue>
				<alpha>0.8</alpha>
			</color>	
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend>X</legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

	<group>
		<layout>vbox</layout>
		<valign>top</valign>
		<group>
			<layout>hbox</layout>
			<align>center</align>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<legend>&lt;</legend>
				<binding>
					<condition>
						<greater-than>
							<property>instrumentation/adc/reference/vt</property>
							<value>90</value>
						</greater-than>
					</condition>
					<command>property-adjust</command>
					<property>instrumentation/adc/reference/vt</property>
					<step>-1</step>
				</binding>
			</button>
			<input>
				<pref-width>44</pref-width>
				<halign>left</halign>
				<property>instrumentation/adc/reference/vt</property>
				<label>VT </label>
				<binding>
					<command>dialog-apply</command>
				</binding>
				<live type="bool">true</live>
			</input>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>				
				<legend>&gt;</legend>
				<binding>
					<condition>
						<less-than>
							<property>instrumentation/adc/reference/vt</property>
							<value>200</value>
						</less-than>
					</condition>
					<command>property-adjust</command>
					<property>instrumentation/adc/reference/vt</property>
					<step>1</step>
				</binding>
			</button>
		</group>
		
		<group>
			<layout>hbox</layout>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<legend>&lt;</legend>
				<binding>
					<condition>
						<greater-than>
							<property>instrumentation/adc/reference/v2</property>
							<value>90</value>
						</greater-than>
					</condition>
					<command>property-adjust</command>
					<property>instrumentation/adc/reference/v2</property>
					<step>-1</step>
				</binding>
			</button>
			<input>
				<pref-width>44</pref-width>
				<halign>left</halign>
				<property>instrumentation/adc/reference/v2</property>
				<label>V2</label>
				<binding>
					<command>dialog-apply</command>
				</binding>
				<live type="bool">true</live>
			</input>
			<button>
				<pref-height>25</pref-height>
				<pref-width>25</pref-width>
				<legend>&gt;</legend>
				<binding>
					<condition>
						<less-than>
							<property>instrumentation/adc/reference/v2</property>
							<value>180</value>
