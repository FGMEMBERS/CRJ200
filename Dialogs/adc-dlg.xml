					</condition>
					<command>property-adjust</command>
					<property>instrumentation/adc/reference/v2</property>
					<step>1</step>
				</binding>
			</button>
		</group>
		
		<group>
			<layout>hbox</layout>
			<button>
				<pref-height>25</pref-height>
