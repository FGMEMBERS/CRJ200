<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
	<name>autothrottle</name>
    <layout>vbox</layout>
	<x>700</x>
	<y>-2</y>	
	<color>
		<red>0.3</red>
		<green>0.3</green>
		<blue>0.3</blue>
		<alpha>0.3</alpha>
	</color>	
    <group>
		<layout>hbox</layout>
		<text>
			<label>O</label>
			<visible>
				<property>controls/autoflight/autothrottle-engage</property>
			</visible>
		</text>
		<button>
			<legend>AutoThr.</legend>
			<pref-height>25</pref-height>
			<pref-width>60</pref-width>
			<color>
				<red>0.3</red>
				<green>0.3</green>
				<blue>0.3</blue>
				<alpha>0.6</alpha>
			</color>
			<enable>
				<property>sim/config/allow-autothrottle</property>
			</enable>
			<binding>
				<command>property-toggle</command>
				<property>controls/autoflight/autothrottle-engage</property>
			</binding>
		</button>
		<text>
			<label>O</label>
			<visible>
				<property>controls/autoflight/autothrottle-engage</property>
			</visible>
		</text>
