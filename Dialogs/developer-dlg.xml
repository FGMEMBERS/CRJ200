<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
	<name>developer</name>
    <layout>vbox</layout>
	<color>
		<red>0.3</red>
		<green>0.3</green>
		<blue>0.3</blue>
		<alpha>0.6</alpha>
	</color>	
    <group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>Developer menu</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<pref-width>22</pref-width>
			<pref-height>16</pref-height>
			<legend>-d</legend>
			<border>2</border>
			<binding>
				<command>property-assign</command>
				<property>sim/config/developer</property>
				<value>0</value>
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>		
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend>X</legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<hrule/>
	<group>
		<layout>vbox</layout>
		<halign>left</halign>
		<group>
			<layout>hbox</layout>
			<button>
				<legend>Debug window</legend>
				<binding>
					<command>dialog-show</command>
					<dialog-name>debug</dialog-name>
				</binding>
			</button>			
			<button>
				<legend>AP dev</legend>
				<binding>
					<command>dialog-show</command>
					<dialog-name>apdev</dialog-name>
				</binding>
			</button>
		</group>
		<group>
			<layout>hbox</layout>
			<button>
				<legend>Checklists</legend>
				<binding>
					<command>dialog-show</command>
					<dialog-name>checklist</dialog-name>
				</binding>
			</button>			
			<button>
				<legend>?</legend>
				<binding>
					<command>nasal</command>
					<script>gui.showHelpDialog("/sim/help")</script>
				</binding>
			</button>
			<button>
				<legend>Tutorials</legend>
				<binding>
					<command>dialog-show</command>
					<dialog-name>tutorial</dialog-name>
				</binding>
			</button>
			<button>
				<legend>Bugs/updates</legend>
				<binding>
					<command>open-browser</command>
					<url>https://github.com/d-jsb/CRJ700-family/</url>
				</binding>
			</button>
		</group>
	</group>
</PropertyList>
