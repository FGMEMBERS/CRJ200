<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<name>doors</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>
		<text><label>Doors</label></text>
		<empty><stretch>1</stretch></empty>
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	<hrule/>

	<group>
		<layout>vbox</layout>
		<group>
			<layout>hbox</layout>
			<button>
				<pref-width>35</pref-width>
				<pref-height>24</pref-height>
				<legend>PAX</legend>
				<border>2</border>
				<binding>
					<command>nasal</command>
					<script>CRJ700.doors.pax_left.toggle();</script>
				</binding>
			</button>
			<button>
				<pref-width>35</pref-width>
				<pref-height>24</pref-height>
				<legend>Srvc</legend>
				<border>2</border>
				<binding>
					<command>nasal</command>
					<script>CRJ700.doors.fwd_service.toggle();</script>
				</binding>
			</button>
		</group>
		
		<button>
			<pref-width>80</pref-width>
			<pref-height>24</pref-height>
			<legend>Fwd cargo</legend>
			<border>2</border>
			<binding>
				<command>nasal</command>
				<script>CRJ700.doors.fwd_cargo.toggle();</script>
			</binding>
		</button>
		<button>
			<pref-width>80</pref-width>
			<pref-height>24</pref-height>
			<legend>Ctr cargo</legend>
			<border>2</border>
			<binding>
				<command>nasal</command>
				<script>CRJ700.doors.ctr_cargo.toggle();</script>
			</binding>
		</button>
		<button>
			<pref-width>80</pref-width>
			<pref-height>24</pref-height>
			<legend>Aft cargo</legend>
			<border>2</border>
			<binding>
				<command>nasal</command>
				<script>CRJ700.doors.aft_cargo.toggle();</script>
			</binding>
		</button>
		<button>
			<pref-width>80</pref-width>
			<pref-height>24</pref-height>
			<legend>CLOSE ALL</legend>
			<border>2</border>
			<binding>
				<command>nasal</command>
				<script>CRJ700.doors.close();</script>
			</binding>
		</button>
	</group>
</PropertyList>
