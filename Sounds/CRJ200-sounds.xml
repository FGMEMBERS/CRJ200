	<fx>
		<!-- APU, same for inside and outside -->
		<apu>
			<name>APU starting</name>
			<mode>once</mode>
			<path>Aircraft/CRJ200/Sounds/apu_start.wav</path>
			<condition>
				<and>
					<property>controls/APU/off-on</property>
					<greater-than>
						<property>engines/engine[2]/rpm</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property>engines/engine[2]/rpm</property>
						<value>99</value>
					</less-than>
				</and>
			</condition>
		</apu>
		<apu>
			<name>APU running</name>
			<mode>looped</mode>
			<path>Aircraft/CRJ200/Sounds/apu_run.wav</path>
			<condition>
				<greater-than-equals>
					<property>engines/engine[2]/rpm</property>
					<value>99</value>
				</greater-than-equals>
			</condition>
		</apu>
		<apu>
			<name>APU shutdown</name>
			<mode>once</mode>
			<path>Aircraft/CRJ200/Sounds/apu_shutdown.wav</path>
			<condition>
				<and>
					<not>
						<property>controls/APU/off-on</property>
					</not>
					<greater-than>
						<property>engines/engine[2]/rpm</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property>engines/engine[2]/rpm</property>
						<value>99</value>
					</less-than>
				</and>
			</condition>
		</apu>
		
		
		
		
		
		
		
		
		
		
		
		
