							<abs>
								<property>controls/engines/engine[1]/throttle</property>
							</abs>
						</expression>
					</greater-than>
				</and>
			</condition>
		</enable>
		<input>
			<expression>
				<table>
					<property>fcs/copilot/throttle-cmd-norm[1]</property>
					<entry><ind>0</ind><dep>0</dep></entry>
					<entry><ind>1</ind><dep>0.92</dep></entry>
				</table>
			</expression>
		</input>
		<output>fcs/throttle-cmd-norm[1]</output>
	</filter>
	<!-- 1 : Climb -->
	<!-- Maintains a 300-kt climb with a maximum power level of 91.1% -->
	<pid-controller>
		<name>Engine 1 climb mode controller</name>
		<debug type="bool">false</debug>
		<enable>
			<condition>
				<equals>
					<property>controls/engines/engine[0]/thrust-mode</property>
					<value>1</value>
				</equals>
			</condition>
		</enable>
		<input>
			<property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
		</input>
		<reference>
			<value>300</value>
		</reference>
		<output>fcs/throttle-cmd-norm[0]</output>
		<config>
			<Kp>0.05</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>0</u_min>
			<u_max>0.911</u_max>
		</config>
	</pid-controller>
	<pid-controller>
		<name>Engine 2 climb mode controller</name>
		<debug type="bool">false</debug>
		<enable>
			<condition>
				<equals>
					<property>controls/engines/engine[1]/thrust-mode</property>
					<value>1</value>
				</equals>
			</condition>
		</enable>
		<input>
			<property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
		</input>
		<reference>
			<value>300</value>
		</reference>
		<output>fcs/throttle-cmd-norm[1]</output>
		<config>
			<Kp>0.05</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>0</u_min>
			<u_max>0.911</u_max>
		</config>
	</pid-controller>
	<!-- 2 : TO/GA -->
	<!-- Holds 250 kts with a maximum power level specified by the FMS -->
	<pid-controller>
		<name>Engine 1 TO/GA mode controller</name>
		<debug type="bool">false</debug>
		<enable>
			<condition>
				<equals>
					<property>controls/engines/engine[0]/thrust-mode</property>
					<value>2</value>
				</equals>
			</condition>
		</enable>
		<input>
			<property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
		</input>
		<reference>
			<value>250</value>
		</reference>
		<output>fcs/throttle-cmd-norm[0]</output>
		<config>
			<Kp>0.05</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>0</u_min>
			<u_max>
				<property>instrumentation/fms/to-ga-maximum-n1</property>
				<scale>0.01</scale>
			</u_max>
		</config>
	</pid-controller>
	<pid-controller>
		<name>Engine 2 TO/GA mode controller</name>
		<debug type="bool">false</debug>
		<enable>
			<condition>
				<equals>
					<property>controls/engines/engine[1]/thrust-mode</property>
					<value>2</value>
				</equals>
			</condition>
		</enable>
		<input>
			<property>autopilot/internal/lookahead-5-sec-airspeed-kt</property>
		</input>
		<reference>
			<value>250</value>
		</reference>
		<output>fcs/throttle-cmd-norm[1]</output>
		<config>
			<Kp>0.05</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>0</u_min>
			<u_max>
				<property>instrumentation/fms/to-ga-maximum-n1</property>
				<scale>0.01</scale>
			</u_max>
		</config>
	</pid-controller>
	<!-- 3 : Max -->
	<!-- Keeps throttles at 100% power -->
	<filter>
		<name>Engine 1 maximum controller</name>
		<type>gain</type>
		<debug type="bool">false</debug>
		<gain>1</gain>
		<enable>
			<condition>
				<equals>
					<property>controls/engines/engine[0]/thrust-mode</property>
					<value>3</value>
				</equals>
			</condition>
		</enable>
		<input>
			<value>1</value>
		</input>
		<output>fcs/throttle-cmd-norm[0]</output>
	</filter>
	<filter>
		<name>Engine 1 maximum controller</name>
		<type>gain</type>
		<debug type="bool">false</debug>
		<gain>1</gain>
		<enable>
			<condition>
				<equals>
					<property>controls/engines/engine[0]/thrust-mode</property>
					<value>3</value>
				</equals>
			</condition>
		</enable>
		<input>
			<value>1</value>
		</input>
		<output>fcs/throttle-cmd-norm[1]</output>
