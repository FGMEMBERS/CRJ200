<!-- Bombardier CRJ700 series -->
<!-- Flight controls -->

<PropertyList>

	<!-- Ailerons -->
	<filter>
		<name>Autopilot aileron controller</name>
		<type>gain</type>
		<debug type="bool">false</debug>
		<gain>1</gain>
		<enable>
			<condition>
				<and>
					<property>autopilot/internal/autoflight-engaged</property>
					<property>systems/hydraulic/outputs/aileron</property>
				</and>				
			</condition>
		</enable>
		<input>
			<property>fcs/autopilot/aileron-cmd-norm</property>
		</input>
		<output>fcs/aileron-cmd-norm</output>
	</filter>
	<filter>
		<name>Manual pilot aileron controller</name>
		<type>gain</type>
		<debug type="bool">false</debug>
		<gain>1</gain>
		<enable>
			<condition>
				<and>
					<not>
						<property>autopilot/internal/autoflight-engaged</property>
					</not>
					<or>
						<not>
							<property>fcs/copilot/active</property>
						</not>
						<greater-than-equals>
							<expression>
								<abs>
									<property>controls/flight/aileron</property>
								</abs>
							</expression>
							<expression>
								<abs>
									<property>fcs/copilot/aileron-cmd-norm</property>
								</abs>
							</expression>
						</greater-than-equals>
					</or>
					<property>systems/hydraulic/outputs/aileron</property>
				</and>
			</condition>
		</enable>
		<input>
			<property>controls/flight/aileron</property>
		</input>
		<output>fcs/aileron-cmd-norm</output>
	</filter>
	<filter>
		<name>Manual copilot aileron controller</name>
		<type>gain</type>
		<debug type="bool">false</debug>
		<gain>1</gain>
		<enable>
			<condition>
				<and>
					<not>
						<property>autopilot/internal/autoflight-engaged</property>
					</not>
					<property>fcs/copilot/active</property>
					<not>
						<property>autopilot/internal/autoflight-engaged</property>
					</not>
					<greater-than>
						<expression>
							<abs>
								<property>fcs/copilot/aileron-cmd-norm</property>
							</abs>
						</expression>
						<expression>
							<abs>
								<property>controls/flight/aileron</property>
							</abs>
						</expression>
					</greater-than>
					<property>systems/hydraulic/outputs/aileron</property>
				</and>
			</condition>
		</enable>
		<input>
			<property>fcs/copilot/aileron-cmd-norm</property>
		</input>
		<output>fcs/aileron-cmd-norm</output>
	</filter>

	<!-- Rudder -->
	<filter>
		<name>Yaw damper rudder controller (pilot input)</name>
		<type>gain</type>
		<debug type="bool">false</debug>
		<gain>1</gain>
		<enable>
			<condition>
				<and>
					<property>autopilot/yaw-damper-serviceable</property>
					<or>
						<property>controls/autoflight/yaw-damper[0]/engage</property>
						<property>controls/autoflight/yaw-damper[1]/engage</property>
					</or>
					<or>
						<not>
							<property>fcs/copilot/active</property>
						</not>
						<greater-than-equals>
							<expression>
								<abs>
									<property>controls/flight/rudder</property>
								</abs>
							</expression>
							<expression>
								<abs>
									<property>fcs/copilot/rudder-cmd-norm</property>
								</abs>
							</expression>
						</greater-than-equals>
					</or>
					<property>systems/hydraulic/outputs/rudder</property>
				</and>
			</condition>
		</enable>
		<input>
			<expression>
				<max>
					<min>
						<sum>
							<property>controls/flight/rudder</property>
							<property>fcs/autopilot/rudder-cmd-norm</property>
						</sum>
						<value>1</value>
					</min>
					<value>-1</value>
				</max>
			</expression>
		</input>
		<output>fcs/rudder-cmd-norm</output>
	</filter>
